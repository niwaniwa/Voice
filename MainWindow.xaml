<Window x:Class="Voice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:Voice"
        xmlns:mvvm="clr-namespace:Voice.MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <mvvm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Button x:Name="Toggle" Command="{Binding DebugToggleButton}" Content="Toggle" HorizontalAlignment="Left" Margin="260,139,0,0" VerticalAlignment="Top" Width="265" Height="177"/>

    </Grid>
</Window>
